@model IEnumerable<ETicModels.Entities.Category>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <table class="table table-hover">
        <thead>
       <tr>
           <th>Kategori Adı</th>
           <th>Açıklama</th>
           <th colspan="2"></th>
       </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
  <tr>
      <td>@item.CategoryName</td>
      <td>@item.Description</td>
      <td><a href="/Admin/Category/Update/@item.ID" class="btn btn-default">Güncelle</a>
     <a href="/Admin/Category/Delete/@item.ID" class="btn btn-default">Sil</a></td>
  </tr>
            }
        </tbody>
    </table>
</div>